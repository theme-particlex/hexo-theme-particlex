<div id="menu" :class="{ hidden: hiddenMenu, 'menu-color': menuColor}">
    <nav id="desktop-menu">
        <a class="title" href="<%- config.root %>">
            <span><%= config.title.toUpperCase() %></span>
        </a>
        <% Object.entries(theme.menu).forEach(([key, value]) => { %>
        <a href="<%- url_for(value.link) %>">
            <i class="fa-<%- value.theme %> fa-<%- value.name %> fa-fw"></i>
            <span>&ensp;<%= key %></span>
        </a>
        <% }); %>
        <i class="fa-solid fa-fw theme-switcher" :class="theme=='auto'?'fa-circle-half-stroke':theme=='dark'?'fa-moon':'fa-sun'"
            @click="handleThemeSwitch"></i>
    </nav>
    <nav id="mobile-menu">
        <div class="title" @click="showMenuItems = !showMenuItems">
            <i class="fa-solid fa-bars fa-fw"></i>
            <span>&emsp;<%= config.title.toUpperCase() %></span>
        </div>
        <transition name="slide">
            <div class="items" v-show="showMenuItems">
                <% Object.entries(theme.menu).forEach(([key, value]) => { %>
                <a href="<%- url_for(value.link) %>">
                    <div class="item">
                        <div style="min-width: 20px; max-width: 50px; width: 10%">
                            <i class="fa-<%- value.theme %> fa-<%- value.name %> fa-fw"></i>
                        </div>
                        <div style="min-width: 100px; max-width: 150%; width: 20%"><%= key %></div>
                    </div>
                </a>
                <% }); %>
                <div class="item" @click="handleThemeSwitch">
                    <div style="min-width: 20px; max-width: 50px; width: 10%">
                        <i class="fa-solid fa-fw theme-switcher"
                            :class="theme=='auto'?'fa-circle-half-stroke':theme=='dark'?'fa-moon':'fa-sun'"></i>
                    </div>
                    <div style="min-width: 100px; max-width: 150%; width: 20%">
                        Theme: {{ theme=='auto'?'Auto':theme=='dark'?'Dark':'Light' }}
                    </div>
                </div>
            </div>
        </transition>
    </nav>
</div>
<transition name="fade">
    <div id="menu-curtain" @click="showMenuItems = !showMenuItems" v-show="showMenuItems"></div>
</transition>
